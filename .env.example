# Supernote Private Cloud Environment Configuration
# Copy this file to .env and update the values

# Database settings
# Generate secure passwords using: openssl rand -base64 24
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
MYSQL_USER=supernote
MYSQL_PASSWORD=CHANGE_ME_MYSQL_PASSWORD

# Redis settings
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# HTTPS Configuration
# DOMAIN_NAME must match one of the Subject Alternative Names (SANs) in your SSL certificate.
# Common options:
#   - localhost (works for local browser access)
#   - your-hostname.local (for LAN access via hostname)
#   - your-domain.com (for public access with valid cert)
# Check your cert's SANs: openssl x509 -in cert/server.crt -noout -ext subjectAltName
DOMAIN_NAME=localhost
SSL_CERT_NAME=server.crt
SSL_KEY_NAME=server.key
