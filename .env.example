# Supernote Private Cloud Environment Configuration
# Copy this file to .env and update the values

# Database settings
# Generate secure passwords using: openssl rand -base64 24
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
MYSQL_USER=supernote
MYSQL_PASSWORD=CHANGE_ME_MYSQL_PASSWORD

# Redis settings
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# HTTPS Configuration
# Set DOMAIN_NAME to your server's hostname or IP address
# For local network: use your machine's hostname (e.g., my-server.local)
# For public access: use your domain name (e.g., cloud.example.com)
DOMAIN_NAME=your-hostname.local
SSL_CERT_NAME=server.crt
SSL_KEY_NAME=server.key
